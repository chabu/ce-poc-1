{
	"manifest_version": 3,
	"name": "S",
	"version": "0.0.3",

	"permissions": [
		"activeTab",
		"contextMenus",
		"downloads",
		"scripting"
	],

	"background": {
		"service_worker": "background.js"
	},

	"action": {
		"default_title": "show user interface",
		"default_popup": "popup.html"
	},

	"content_scripts": [
		{
			"matches": ["https://animestore.docomo.ne.jp/*"],
			"js": ["enable-right-click.js"]
		}
	]
}
